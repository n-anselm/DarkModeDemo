<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackgroundAttr"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/support_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Text View"
        android:textColor="?attr/myTextColorAttr"
        android:textSize="24sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_style"
        android:text="Custom Button"
        android:textColor="#fff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/buttonBackgroundAttr"
        android:onClick="activateDarkMode"
        android:text="Activate Dark Mode"
        android:textColor="?attr/myTextColorAttr" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/buttonBackgroundAttr"
        android:onClick="activateDefaultMode"
        android:text="Activate Default Mode"
        android:textColor="?attr/myTextColorAttr" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#BDBDBD">

        <Switch
            android:layout_gravity="center_vertical"
            android:id="@+id/dm_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:text="Switch"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>

</LinearLayout>